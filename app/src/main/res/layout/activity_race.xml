<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_run"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mark.racetheworld.Activities.RaceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/user_details"
        android:layout_width="340dp"
        android:layout_height="188dp"
        android:layout_alignParentTop="true"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context="com.example.mark.racetheworld.Activities.RaceActivity">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="144dp"
            android:layout_height="93dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"></ImageView>

        <RelativeLayout
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/user_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distance_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Distance: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/user_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/distance_static"
                android:layout_toRightOf="@+id/distance_static"

                android:text="3.69 KM"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/time_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distance_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Time: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time_static"
                android:layout_toRightOf="@+id/time_static"

                android:text="5:23"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/pace_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Pace: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/user_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pace_static"
                android:layout_toRightOf="@+id/time_static"

                android:text="5:23/km"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/position_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pace_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Position: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/user_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/position_static"
                android:layout_toRightOf="@+id/position_static"

                android:text="1st"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="339dp"
        android:layout_height="182dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context="com.example.mark.racetheworld.Activities.RaceActivity">

        <ImageView
            android:id="@+id/opp_pic"
            android:layout_width="144dp"
            android:layout_height="93dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"></ImageView>

        <RelativeLayout
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/opp_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opp_distance_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Distance: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_user_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/opp_distance_static"
                android:layout_toRightOf="@+id/opp_distance_static"

                android:text="3.69 KM"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_time_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opp_distance_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Time: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/opp_time_static"
                android:layout_toRightOf="@+id/opp_time_static"

                android:text="5:23"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_pace_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opp_time_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Pace: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/opp_pace_static"
                android:layout_toRightOf="@+id/opp_time_static"

                android:text="5:23/km"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_position_static"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opp_pace_static"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:text="Position: "
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/opp_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/opp_position_static"
                android:layout_toRightOf="@+id/opp_position_static"

                android:text="1st"
                android:textColor="#FFFFFF"
                android:textSize="18dp"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="117dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:text="STOP RACE" />

</RelativeLayout>